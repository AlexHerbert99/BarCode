@{
    ViewBag.Title = "Validar";
}

<h2>logIn</h2>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Usuario:</td>
            <td>@Html.TextBox("user")</td>
        </tr>

        <tr>
            <td>Clave:</td>
            <td>@Html.Password("password")</td>
        </tr>

        <tr>
            <td><input type="submit" value="Ingresar" onclick="Validar()" class="btn-info text-shadow"/></td>
        </tr>
    </table>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/Login.js"></script>

