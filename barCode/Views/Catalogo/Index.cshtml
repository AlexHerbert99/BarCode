@model IEnumerable<barCode.Models.Producto>
@{
    ViewBag.Title = "Index";
}
<!--CSS-->
<style>
    * {
        margin: 0px;
        padding: 0px;
    }

    html, body {
        width: 100%;
        height: 100%;
        background-image: url(~/Imagenes/Slider2.jpg);
    }

    .pro {
        width: 260px;
        height: 310px;
        display: inline-block;
        vertical-align: top;
        align-items:center;
        display: inline-block;
        text-align: center;
        border-radius: 15px;
        padding: 5px;
        margin: 10px;
    }

        .pro img {
            width: 50%;
            height: 50%;
        }
</style>

<!--Header-->
<div class="grid">
    <div class="">
        <h5>Cervezas</h5>
    </div>
</div>

<div class="row">
    <div class="">

        <div class="col-md-8">
            <h4 style="color:white">Las Mejores cervezas Artesanales Nacionales estan con la Teleton.</h4>            
        </div>

        <div class="align-right col-md-4">

            <form action="~/Catalogo/Buscador">
                <input name="Nombre" id="Nombre" />
                <input type="submit" value="Buscar" class="btn btn-info" />
            </form>

        </div>
    </div>
</div>
<p style="color:white">Todos los productos son con despacho gratis por tiempo limitado !!</p>
<hr class="bg-green">



<!--Articulos Catalogo-->
<article>
    @foreach (var item in Model)
    {
        <div class="frame pro thumbnail">
            <form action="~/Carrito/Agregar">
                <div>
                    <div class="">
                        <header>
                            <h5 class="text-shadow text-bold">@item.NombreProd</h5>
                            <input type="hidden" name="id" value="@item.IdProducto" />
                            <button type="submit" value="Agregar" class="btn btn-xs btn-success text-shadow">Al Carrito</button>
                            <img src="@Url.Content(item.Foto)" height="130" width="130" />
                        </header>
                    </div>
                </div>
            </form>

            <div class="">
                <p class="text-bold">@item.Descripcion</p>
                <p>Caja 12 Unidades</p>
                <div><p class="text-bold text-info">@string.Format("{0:C}", item.Precio)</p></div>
            </div>

            <div class="row">
                <form action="~/Productos/Details">
                    <input type="hidden" name="id" value="@item.IdProducto" />
                    <button class="btn btn-xs btn-info">Detalles</button>
                </form>
            </div>
        </div>

    }
</article>

@for (int i=1; i < ViewBag.Total; i++)
{
    <a href="~/Catalogo/Index?pagina=@i">@i</a>
}

    <!--References-->
    <div>
        <link href="~/Content/metro.css" rel="stylesheet">
        <link href="~/Content/metro-icons.css" rel="stylesheet">
        <link href="~/Content/metro-responsive.css" rel="stylesheet">
        <link href="~/Content/metro-schemes.css" rel="stylesheet">
        <link href="~/Content/docs.css" rel="stylesheet">      
        <link href="~/Content/Fondo.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-2.1.3.min.js"></script>       
        <script src="~/Scripts/run_prettify.js"></script>
    </div>




