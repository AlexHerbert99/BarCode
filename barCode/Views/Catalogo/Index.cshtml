@model IEnumerable<barCode.Models.Producto>
@{
    ViewBag.Title = "Index";
}
<!--CSS-->
<style>
    * {
        margin: 0px;
        padding: 0px;
    }

    html, body {
        width: 100%;
        height: 100%;
    }

    .pro {
        width: 260px;
        height: 300px;
        display: inline-block;
        vertical-align: top;
        align-items:center;
        display: inline-block;
        text-align: center;
        border-radius: 15px;
        padding: 5px;
        margin: 10px;
    }

        .pro img {
            width: 50%;
            height: 50%;
        }
</style>

<!--Header-->
<div class="grid">
    <div class="">
        <h5>Cervezas</h5>
    </div>
</div>

<div class="row">
    <div class="">

        <div class="col-md-8">
            <h4>Las Mejores cervezas Artesanales Nacionales estan con la Teleton.</h4>            
        </div>

        <div class="align-right col-md-4">

            <form action="http://localhost:54140/Catalogo/Buscador">
                <input name="Nombre" id="Nombre" />
                <input type="submit" value="Buscar" class="btn btn-info" />
            </form>

        </div>
    </div>
</div>
<p>Todos los productos son con despacho gratis por tiempo limitado !!</p>
<hr class="bg-green">



<!--Articulos Catalogo-->
@foreach (var item in Model)
{
    <div class="frame pro thumbnail">
        <form action="~/Carrito/Agregar">
            <div>
                <div class="">
                    <header>
                        <h5 class="text-shadow text-bold">@item.NombreProd</h5>
                        <input type="hidden" name="id" value="@item.IdProducto" />
                        <button type="submit" value="Agregar" class="btn-xs btn btn-success text-shadow">Al Carrito</button>
                        <img src="@Url.Content(item.Foto)" height="130" width="130" />
                    </header>
                </div>
            </div>
        </form>

        <div class="">            
            <p class="text-bold">@item.Descripcion</p>
            <div><p class="text-bold text-info">@string.Format("{0:C}", item.Precio)</p></div>          
        </div>          
        
        <div class="row">
            <p>Seleccionar Cantidad</p>
            <form name="Selector" action="11-html5-number-input.php" method="POST">                
                <input type="number" name="cant" min="6" max="36" step="6" required="required">
            </form>
        </div>
    </div>

}

@for (int i=1; i < ViewBag.Total; i++)
{
    <a href="~/Catalogo/Index?pagina=@i">@i</a>
}

