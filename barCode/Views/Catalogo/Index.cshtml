@model IEnumerable<barCode.Models.Producto>
@{
    ViewBag.Title = "Index";
}
<!--CSS-->
<style>
    * {
        margin: 0px;
        padding: 0px;
    }

    html, body {
        width: 100%;
        height: 100%;
    }

    .pro {
        width: 280px;
        height: 250px;
        display: inline-block;
        vertical-align: top;
        display: inline-block;
        text-align: center;
        border-radius: 15px;
        padding: 5px;
        margin: 10px;
    }

        .pro img {
            width: 50%;
            height: 50%;
        }
</style>

<!--Header-->
<div class="grid">
    <div class="">
        <h5>Cervezas</h5>
    </div>
</div>

<div class="row">
    <div class="">

        <div class="col-md-8">
            <h4>Las Mejores cervezas Artesanales Nacionales estan con la Teleton.</h4>
        </div>

        <div class="align-right col-md-4">

            <form action="http://localhost:51424/Carrito/Buscador">
                <input name="Nombre" id="Nombre" />
                <input type="submit" value="Buscar" class="glyphicon-search" />
            </form>

        </div>
    </div>
</div>

<hr class="bg-green">



<!--Articulos Catalogo-->
@foreach (var item in Model)
{
    <div class="pro">
        <form action="~/Carrito/Agregar">
            <div>
                <div class="panel">
                    <header>
                        <h5>@item.NombreProd</h5>
                        <input type="hidden" name="id" value="@item.IdProducto" />
                    </header>

                    <div class="frame">
                        <img src="@Url.Content(item.Foto)" height="130" width="130" />
                        <div>Precio: @string.Format("{0:C}", item.Precio)</div><p></p>
                        <input type="submit" Value="Detalles" class="btn btn-info" onclick="mostrarDetalles()"/>  |
                        <button type="submit" value="Agregar" class="btn btn-success text-shadow">Al Carrito</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

}

