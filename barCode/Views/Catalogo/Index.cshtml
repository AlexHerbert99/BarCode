<!--Header-->
<div class="grid">
    <div class="">
        <h5>Cervezas</h5>
    </div>
</div>

<div class="row">
    <div class="">

        <div class="col-md-8">
            <h4>Las Mejores cervezas Artesanales Nacionales estan con la Teleton.</h4>
            
        </div>

        <div class="align-right col-md-4">

            <form action="http://localhost:51424/Carrito/Buscador">
                <input name="Nombre" id="Nombre" />
                <input type="submit" value="Buscar" class="glyphicon-search" />
            </form>

        </div>
    </div>
</div>

<hr class="bg-green">



<!--Articulos Catalogo-->
@foreach (var item in Model)
{
    <div class="pro">
        <form action="~/Carrito/Agregar">
            <div>
                <div class="panel">
                    <header>
                        <h5>@item.NombreProd</h5>
                        <input type="hidden" name="id" value="@item.IdProducto" />
                    </header>


                    <div class="frame">
                        <img src="@Url.Content(item.Foto)" height="130" width="130" />
                        <p>@item.Descripcion</p>
                        <div>Precio: @string.Format("{0:C}", item.Precio)</div><p></p>
                        <button type="submit" class="btn-xs btn btn-info" onclick="">Detalles</button>  |
                        <button type="submit" value="Agregar" class="btn-xs btn btn-success text-shadow">Al Carrito</button>                        
                    </div>
                </div>
            </div>
        </form>
        <form name="ejemplo2" action="11-html5-number-input.php" method="POST">           
            <input type="number" name="edad" min="12" max="36" step="12" required="required">            
        </form>
    </div>

}


