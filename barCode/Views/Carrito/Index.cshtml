@model IEnumerable<barCode.Models.Producto>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-8">
        <h2 style="color:white">Carrito de compras</h2>
    </div>
    <div class="col-md-4" align="right">
        <p></p>
        <a class="btn btn-success" href="/Catalogo" role="button">Seguir Agregando</a> |
        <a class="btn btn-info text-shadow" href="/Login/Index">Comprar</a>
    </div>
</div>

<table class="table table-hover table-bordered" style="background-color:wheat">
    <tr>
        <th>Foto</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Valor Caja</th>
        <th>Cajas</th>
        <th>Subtotal</th>
        <th>Opciones</th>
    </tr>
    @{
        double total = 0;
    }

    @foreach (var item in Model)
    {
        total += (double)(item.cantidad * item.Precio);
        <tr>
            <td><img src="@Url.Content(item.Foto)" height="100" width="100" /></td>
            <td>@item.NombreProd</td>
            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
            <td>@String.Format("{0:C}", item.Precio)</td>
            <td>@Html.DisplayFor(modelItem => item.cantidad)</td>
            <td>@String.Format("{0:C}", item.montoTotal)</td>
            <td>@Html.ActionLink("Eliminar", "Borrar", new { id = item.IdProducto })</td>
        </tr>
    }
    <tfoot>
        <tr>
            <th colspan="5">Total</th>
            <th>@String.Format("{0:c}", total)</th>
        </tr>
    </tfoot>

</table>
