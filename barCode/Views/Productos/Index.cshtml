@model IEnumerable<barCode.Models.Producto>

@{
    ViewBag.Title = "Index";
}
<h2>Lista de Productos</h2>

<div class="row">
    <div class="col-md-3">
        <a href="/Productos/Create" class="btn btn-info">Agregar</a>
    </div>
    
    <div class="col-md-9" align="right">
        <form action="~/Productos/Buscador">
            <input type="text" name="nombre" placeholder="Nombre del Producto" class="form-control" />
            <p></p>
            <input type="submit" value="Buscar" class="btn btn-info" />
        </form>
    </div>

</div>


<p></p>

<table class="table table-bordered table-hover">
    <tr class="panel-title panel-primary">
        @*<th>
            @Html.DisplayNameFor(model => model.IdBoleta)
        </th>*@
        <th>
            Nro
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Eliminado)
        </th>
        <th>Opciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.IdBoleta)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.IdCategoria)
        </td>
        <td>
            <img src="@Url.Content(item.Foto)" height="100" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @String.Format("{0:C}", item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Eliminado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IdProducto }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.IdProducto }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdProducto })
        </td>
    </tr>
}
</table>

@for(int i=1; i< ViewBag.Total; i++)
{
    <a href="~/Productos/Index?pagina=@i">@i</a>
}