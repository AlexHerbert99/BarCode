@model IEnumerable<barCode.Models.Producto>
@{
    ViewBag.Title = "Index";
}

<h2 style="color:white">Realizar Pago</h2>

<form action="/BancoFalso/Pagar">
    <input type="text" name="monto" placeholder="Monto" class="form-control"/><p></p>    
    <input type="text" name="descripcion" placeholder="Descripcion" class="form-control" /><p></p>
    <input type="text" name="idPedido" placeholder="Numero Pedido" class="form-control" /><p></p>
    <input type="text" name="idCuenta" placeholder="id de Cuenta" class="form-control" /><p></p>
    <input type="submit" value="Enviar" class="btn btn-info" />
</form>
<p></p>

<form action="traercuentas"></form>

<table class="table table-hover table-bordered" style="background-color:white">
    <tr>        
        <th>Producto</th>
        <th>Precio Unitario</th>
        <th>Cantidad</th>
        <th>Total a Pagar</th>
    </tr>
    @{
        double total = 0;
    }

    @foreach (var item in Model)
    {
        total += (double)(item.cantidad * item.Precio);
        <tr>           
            <td>@Html.DisplayFor(modelItem => item.NombreProd)</td>
            <td>@String.Format("{0:C}", item.Precio)</td>
            <td>@Html.DisplayFor(modelItem => item.cantidad)</td>
            <td>@String.Format("{0:C}", item.montoTotal)</td>            
        </tr>
    }
    <tfoot>
        <tr>
            <th colspan="3">Total</th>
            <th>@String.Format("{0:C}", total)</th>
        </tr>
    </tfoot>
</table>



